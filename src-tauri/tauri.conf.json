{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SynapticFlow",
  "version": "0.1.0",
  "identifier": "com.fritzprix.synapticflow",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SynapticFlow - High-Freedom AI Agent Platform",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc://localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["$RESOURCE/**", "workspace/**"]
      }
    },
    "trayIcon": {
      "iconPath": "icons/icon.png"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
