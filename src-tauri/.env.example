# SynapticFlow Configuration Example
# Copy this file to .env and adjust values as needed
#
# ⚠️  IMPORTANT: .env files are only loaded in DEVELOPMENT mode
# In production, set these as system environment variables

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite database file path
# Default: {user_data_dir}/com.fritzprix.synapticflow/synapticflow_v2.db
# Example for custom path:
# SYNAPTICFLOW_DB_PATH=/custom/path/to/database.db

# =============================================================================
# File Operations
# =============================================================================

# Maximum file size allowed for imports and operations (in bytes)
# Default: 10485760 (10 MB)
# Note: Use numeric values only (no arithmetic expressions)
SYNAPTICFLOW_MAX_FILE_SIZE=10485760

# =============================================================================
# Execution Timeouts
# =============================================================================

# Default timeout for tool execution (in seconds)
# Default: 30
SYNAPTICFLOW_DEFAULT_EXECUTION_TIMEOUT=30

# Maximum allowed timeout for tool execution (in seconds)
# Default: 300
SYNAPTICFLOW_MAX_EXECUTION_TIMEOUT=300

# =============================================================================
# Process execution
# =============================================================================
# Maximum output size captured for command stdout/stderr (in bytes)
# Default: 104857600 (100 MB)
SYNAPTICFLOW_MAX_OUTPUT_SIZE=104857600

# Graceful shutdown timeout for spawned processes (seconds)
# When cancelling a process, the server will wait this many seconds for the process to
# exit gracefully before marking it as not-terminated.
SYNAPTICFLOW_GRACEFUL_SHUTDOWN_TIMEOUT=3

# Polling threshold for excessive polling detection (consecutive polls while running)
# Default: 5
# When an AI agent polls a running process this many times consecutively, a guidance
# message will be displayed suggesting more efficient monitoring strategies.
SYNAPTICFLOW_POLL_THRESHOLD=5

# =============================================================================
# Message Index & Search
# =============================================================================

# Maximum number of documents to index (0 = unlimited)
# Default: 10000
MESSAGE_INDEX_MAX_DOCS=10000

# Length of text snippets extracted for search results (in characters)
# Default: 200
MESSAGE_INDEX_SNIPPET_LENGTH=200
